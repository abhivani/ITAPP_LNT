<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Welcome To IT APP Forms</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs" role="tablist">
                    <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Pending  (@Model.Pending.Count) </a></li>
                    <li><a class="nav-link" data-toggle="tab" href="#tab-2"> My Request (@Model.MyRequest.Count)</a></li>
                    @if (Model.AllRequest.Count > 0)
                    {
                        <li><a class="nav-link" data-toggle="tab" href="#tab-3"> ALL Request (@Model.MyRequest.Count)</a></li>
                    }

                </ul>
                <div class="tab-content">
                    <div role="tabpanel" id="tab-1" class="tab-pane active">
                        <div class="panel-body">

                            <table id="tblPndg" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th class="text-center">Action</th>
                                        <th class="text-center">Request No.</th>
                                        <th class="text-center">Request Date</th>
                                        <th class="text-center">Request For</th>
                                        <th class="text-center">Pending With</th>
                                        <th class="text-center">Status</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Pending)
                                    {
                                        <tr>
                                            <td>
                                                @*<a href="JAvascipt:void(0)" onclick="" class="glyphicon glyphicon-pencil ReviewClick btn btn-primary edit-person" title="Show"></a>*@
                                                @if (item.RequestFor == "USB")
                                                {
                                                    @Html.ActionLink(" ", "USBRequest", "USBRequest", new { paramUSBRequestFormId = item.USBRequestFormId, IsPending = true  }, new { @class = " glyphicon glyphicon-pencil ReviewClick btn btn-primary edit-person" })
                                                }
                                                @if (item.RequestFor == "DRIVE")
                                                {

                                                    @Html.ActionLink(" ", "DriveAcessForms", "DriveAccess", new { paramDriveAccessFormId = item.DriveAccessFormId, IsPending = true  }, new { @class = " glyphicon glyphicon-pencil ReviewClick btn btn-primary edit-person" })
                                                }
                                                @if (item.RequestFor == "DAMAGE")
                                                {
                                                    @Html.ActionLink(" ", "DamageDeviceForms", "DamageDevice", new { paramDamageDeviceFormId = item.DamageDeviceFormId, IsPending = true}, new { @class = " glyphicon glyphicon-pencil ReviewClick btn btn-primary edit-person" })
                                                }

                                                @if (item.RequestFor == "SHIFTING")
                                                {
                                                    @Html.ActionLink(" ", "DeviceShiftingForms", "DeviceShifting", new { paramDeviceShiftingFormId = item.DeviceShiftingFormId, IsPending = true }, new { @class = " glyphicon glyphicon-pencil ReviewClick btn btn-primary edit-person" })
                                                }

                                                @if (item.RequestFor == "New It Requisition")
                                                {

